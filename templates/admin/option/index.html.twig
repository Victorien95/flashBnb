{% extends 'admin/base.html.twig' %}

{% block title %}Administration des options{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1 class="my-5">Gestion des options</h1>
    <a class="btn btn-primary mb-4" href="{{ path('admin_option_new') }}">Cr√©er une nouvelle option</a>
    <table class="table table-hover table-striped myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for option in data %}
                <tr>
                    <td class="align-middle">{{ option.id }}</td>
                    <td class="align-middle"><a href="{{ path('admin_option_edit', {'id':option.id}) }}">{{ option.name }}</td>
                    <td class="text-center row justify-content-center">
                        {% include 'admin/common/_editButton.html.twig' with {
                            'route': 'admin_option_edit',
                            'id': option.id,
                        } %}
                        {% include 'admin/common/_deleteButton.html.twig' with {
                            'route': 'admin_option_delete',
                            'id': option.id,
                        } %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {#{{ pagination.display }}#}
</div>
{% endblock %}
