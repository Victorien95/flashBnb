{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}

<div class="container-fluid">
    <h1 class="my-5">Gestion des annonces</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">Réservations</th>
                <th class="text-center">Note</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for ad in ads %}
                {% set author = ad.author %}
                <tr>
                    <td class="align-middle">{{ ad.id }}</td>
                    <td class="align-middle">{{ ad.title }}</td>
                    <td class="align-middle"><img class="avatar avatar-micro mr-2" src="{{ author.picture }}" alt="Avata de {{ author.fullname }}">{{ author.fullName }}</td>
                    <td class="text-center align-middle h5"><span class="badge badge-info">{{ ad.bookings|length }}</span></td>
                    <td class="text-center align-middle h5">
                        {% if ad.avgRatings == 0 %}
                            <span class="badge badge-dark">pas encore noté</span>
                        {% else %}
                        <span class="badge badge-warning">{{ ad.avgRatings|number_format(1, ',', ' ') }}</span></td>
                        {% endif %}
                    <td class="text-center">
                        <a href="{{ path('admin_ads_edit', {'id': ad.id}) }}" class="btn btn-primary mr-lg-1 my-1"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_ads_delete', {'id': ad.id}) }}" class="btn btn-danger ml-lg-1 my-1"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
