{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center mb-4">
            <div class="col-lg-3 text-center">
                <img src="{{ user.picture }}" class="avatar mb-3" alt="Avatar de {{ user.fullName }}">
                <br>
                <span class="badge badge-primary">{{ user.ads|length }} annonces</span>
            </div>
            <div class="col-lg-9 text-center text-lg-left">
                <h1>{{ user.fullName }}</h1>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profil') }}" class="btn btn-primary mr-3 ml-3 ml-sm-0 mb-2">Modifier mes informations</a>
                        <a href="{{ path('account_password') }}" class="btn btn-primary mr-3 ml-3 ml-sm-0 mb-2">Modifier mon mot de passe</a>
                    </div>
                {% endif %}
            </div>
        </div>
        {{ user.description|raw }}
        <hr>
        <h2 id="myAds" class="my-4">{% if user is same as (app.user) %}Mes annonces {% else %} Annonces de {{ user.fullName}} {% endif %} </h2>
        {% if user.ads|length > 0 %}
            <div class="row">
                {% for ad in user.ads %}
                    {% include 'common/_ad.html.twig' %}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning">
                <strong>Vous n'avez pas encore d'annonces sur le site</strong>
            </div>
        {% endif %}
        {% if app.user is same as (user) %}
            <hr>
            <h2 id="liked" class="my-4">Mes favoris</h2>
            {% if user.likes|length > 0 %}
                <div class="row">
                    {% for ad in user.likes %}
                        {% include 'common/_ad.html.twig' with {'ad':ad.ad}%}
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-warning">
                    <strong>Vous n'avez pas encore de favoris</strong>
                </div>
            {% endif %}

        {% endif %}

    </div>

{% endblock %}
