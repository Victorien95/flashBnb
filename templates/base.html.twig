<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>FlashBnB - {% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, user-scalable=no">
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('css/select2') }}

        <script src="https://kit.fontawesome.com/e971e3c315.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://cdn.tiny.cloud/1/xux5nc9ofnf9ijk7jk4efwtw030xpqf4dxyowv9lk0g6mlmu/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
        <style>
            #ui-id-1{
                background-color: white;
                width: 200px;
                list-style: none;
                border: 1px solid #ced4da ;
                border-radius: 0.25rem;
                padding: 0;
            }
            #ui-id-1>li{
                padding: 5px;
            }
            #ui-id-1>li:hover{
                cursor: pointer;
                color: whitesmoke;
                background-color: #2196F3;
            }
            #searchBarre{
                border: 1px solid #ced4da;
                border-radius: 0.25rem;
                width: 300px;
            }
        </style>


        {% block stylesheets %}{% endblock %}
    </head>

    <body>
        <div id="main">

            {% include 'common/header.html.twig' %}
            {% include 'common/flashes.html.twig' %}
            {% block body %}{% endblock %}


            {% include 'common/footer.html.twig' %}


            {{ encore_entry_script_tags('app') }}
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js" integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU=" crossorigin="anonymous"></script>
            {{ encore_entry_script_tags('js/select2') }}
            {{ encore_entry_script_tags('js/autocomplete') }}
            <script>
                $('select').select2();
                tinymce.init({
                    selector: 'textarea',
                    force_br_newlines : true,
                    force_p_newlines : false,
                    plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
                    toolbar_mode: 'floating',
                    language:'fr_FR',
                    menubar: 'file edit view format table tools help'
                });
            </script>

            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
