{% extends 'base.html.twig' %}

{% block title %}Les annonces{% endblock %}

{% block body %}
    <div class="container">
        <div class="jumbotron">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    {{ form_row(form.minRooms) }}
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <h1 class="my-4">Voici les annonces de nos h√¥tes</h1>
        <div class="row">
            {% for ad in paginator.data %}
                {% include 'common/_ad.html.twig'  with {'ad': ad }%}
            {% endfor %}
        </div>
    </div>

    {{ paginator.display }}

{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#minRooms').attr({max:{{ stats.maxRooms }}, min: 1})
        })
    </script>
{% endblock %}
