{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col">
                <a class="dash-link" href="{{ path('admin_user_index') }}">
                    <div class="card bg-gradient-primary text-white text-center">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4"><i class="fas fa-users fa-3x"></i></div>
                                <div class="col-8">
                                    <h4 class="card-title">{{ stats.usersCount }} utilisateurs inscrits</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a class="dash-link" href="{{ path('admin_ads_index') }}">
                    <div class="card bg-gradient-success text-white text-center">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4">
                                    <i class="fas fa-hotel fa-3x"></i>
                                </div>
                                <div class="col-8">
                                    <h4 class="card-title">{{ stats.adsCount }} annonces postées</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a class="dash-link" href="{{ path('admin_booking_index') }}">
                    <div class="card bg-gradient-warning text-white text-center">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4">
                                    <i class="fas fa-folder fa-3x"></i>
                                </div>
                                <div class="col-8">
                                    <h4 class="card-title">{{ stats.bookingsCount }} réservations</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col">
                <a class="dash-link" href="{{ path('admin_comment_index') }}">
                    <div class="card bg-gradient-info text-white text-center">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-4">
                                    <i class="fas fa-comments fa-3x"></i>
                                </div>
                                <div class="col-8">
                                    <h4 class="card-title">{{ stats.commentsCount }} commentaires</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <hr>

        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3">
                        <i class="fas fa-arrow-up mr-2"></i>Les annonces les mieux notées
                    </h2>
                    <table class="table table-hover text-light">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th class="text-center">Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in stats.adsStats('DESC')  %}
                                <tr>
                                    <td>{{ ad.title }}</td>
                                    <td>
                                        <img class="avatar avatar-micro mr-1" src="{{ ad.picture }}"
                                             alt="avatar de {{ ad.firstName }} {{ ad.lastName }}">
                                        {{ ad.firstName }} {{ ad.lastName }}
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-info">
                                            {{ ad.note|number_format(1, ',', ' ') }}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>

                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3">
                        <i class="fas fa-arrow-down mr-2"></i>Les annonces les moins biens notées
                    </h2>
                    <table class="table table-hover text-light">
                        <thead>
                        <tr>
                            <th>Annonce</th>
                            <th>Propriétaire</th>
                            <th class="text-center">Moyenne</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ad in stats.adsStats('ASC')  %}
                            <tr>
                                <td>{{ ad.title }}</td>
                                <td>
                                    <img class="avatar avatar-micro mr-1" src="{{ ad.picture }}"
                                         alt="avatar de {{ ad.firstName }} {{ ad.lastName }}">
                                    {{ ad.firstName }} {{ ad.lastName }}
                                </td>
                                <td class="text-center">
                                        <span class="badge badge-info">
                                            {{ ad.note|number_format(1, ',', ' ') }}
                                        </span>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
