{% extends 'admin/base.html.twig' %}
{% block title %}Modifier la réservation n°{{ booking.id }}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/booking.css') }}">{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Modifier la réservation n°{{ booking.id }}</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-6">
                {{ form_row(form.startDate) }}
                {{ form_row(form.endDate) }}
            </div>
            <div class="col-6">
                {{ form_row(form.booker) }}
                {{ form_row(form.ad) }}
            </div>
            <div class="col-12 my-3">
                {{ form_row(form.comment) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-check mr-1"></i>Enregistrer les modifications
        </button>
        {{ form_end(form) }}
    </div>

{% endblock %}



