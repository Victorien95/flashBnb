{% extends 'base.html.twig' %}
{% block title %}Vos réservations{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mes réservations</h1>
        <div class="alert alert-primary mt-5">
            <p>Retrouvez ci-dessous toutes vos réservations passées et à venir</p>
        </div>
        {% for booking in app.user.bookings  %}
            {% set ad = booking.ad %}
            <div class="row mb-4">
                <div class="col-4">
                    <img src="{{ ad.coverImage }}" class="img-fluid" alt="Photo de {{ ad.title }}">
                </div>
                <div class="col-8">
                    <div class="row align-items-center">
                        <div class="col-10">
                            <h4>{{ ad.title }}</h4>
                            <p>
                                Réservation <strong>n°{{ booking.id }}</strong><br>

                            Du {{ booking.startDate|date('d/m/Y') }} au {{ booking.endDate|date('d/m/Y') }} ({{ booking.amount }} &euro;)
                            </p>
                            <a href="{{ path('booking_show', {'id': booking.id}) }}" class="btn btn-info">Plus d'informations</a>
                        </div>
                        <div class="col-2 align-middle">
                                <i class="fas fa-circle text-{% if booking.endDate < date()  %}danger{% else %}success"{% endif %}></i>
                        </div>
                    </div>
                </div>
            </div>
            {% if loop.last %}
                {% else %}
                    <hr>
            {% endif %}
        {% endfor %}
    </div>

{% endblock %}



