{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'option {{ option.id }}{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">

        <h1 class="my-5">Modification de l'option {{ option.name }}</h1>

        {{ form_start(form) }}
        {{ form_row(form.name) }}
        <button class="btn btn-primary my-4" type="submit">
            <i class="fas fa-check mr-1"></i>Enregistrer les modifications
        </button>
        {{ form_end(form) }}
    </div>

{% endblock %}





