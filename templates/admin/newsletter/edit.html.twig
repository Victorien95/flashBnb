{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'inscrit à la newsletter n°{{ newsletter.id }}{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">

        <h1 class="my-5">Modification de l'inscrit à la newsletter n°{{ newsletter.id }}</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="hidden" name="_token_save" value="{{ csrf_token('save' ~ newsletter.id ) }}">
        <button class="btn btn-primary my-4" type="submit">
            <i class="fas fa-check mr-1"></i>Enregistrer les modifications
        </button>
        {{ form_end(form) }}
    </div>

{% endblock %}





