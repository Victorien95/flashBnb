{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h3 class="my-4">Inscription</h3>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.lastName) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.imageFile) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(form.introduction) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(form.description) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.hash) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.passwordConfirm) }}
                    </div>
                    <div class="col-6">
                        {{ form_row(form.newsletter) }}
                    </div>

                </div>
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">S'inscrire</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}



