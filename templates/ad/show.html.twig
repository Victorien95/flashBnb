{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
          integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
          crossorigin=""/>

    <style>
        a[data-toggle="modal"]{
            font-size: 0.8125rem;
        }
        .socialNetwork>.fab, .socialNetwork>.far{
            margin-right: 1rem;
            color: #3B5998;
        }
        div.modal-body>div.row>div.col-12{
            border-bottom: 1px solid #dee2e6;
            padding-bottom: 1rem;
            padding-top: 1rem;
        }
        div.modal-body>div.row>div.col-12:last-child{
            border-bottom: none;
            padding-bottom: 0;
        }
        div.modal-body>div.row>div.col-12:first-child{
            padding-top: 0;
        }
        .socialNetwork{
            font-size: 1.5rem;
            padding-left: 1.2rem;
        }
    </style>

{% endblock %}

{% block title %}{{ ad.title }}{% endblock %}

{% block body %}
    <div class="ad" style="background-image: url({{ ad.coverImage }})">
        <div class="container">
            <h1>{{ ad.title }}</h1>
            <p>{{ ad.introduction }}</p>
            <p class="h2 mb-4">
                <strong>{{ ad.rooms }} chambres</strong> pour <strong>{{ ad.price }}&euro;</strong> par nuits
            </p>
            {% if app.user and app.user == ad.author %}
                <form class="ml-lg-1 my-1 d-inline-block" method="post" action="{{ path('ads_edit', {'slug': ad.slug}) }}">
                    <input type="hidden" name="_method" value="EDIT">
                    <input type="hidden" name="_token_edit" value="{{ csrf_token('edit' ~ ad.slug ) }}">
                    <button class="btn btn-warning ">Modifier l'annonce</button>
                </form>
                {#<a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-warning">Modifier l'annonce</a>#}
                <form class="ml-lg-1 my-1 d-inline-block" method="post" action="{{ path('ads_delete', {'slug': ad.slug}) }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ad.slug ) }}">
                    <button class="btn btn-danger ">Supprimer l'annonce</button>
                </form>
                {#<a href="{{ path('ads_delete', {'slug': ad.slug}) }}" class="btn btn-danger ml-2"
                   onclick="return confirm(`Êtes vous sur de vouloir supprimer l'annonce {{ ad.title }} ?`)">Supprimer
                    l'annonce</a>#}
            {% else %}
                <a href="{{ path('booking_create', {'slug': ad.slug}) }}" class="btn btn-primary">Réserver</a>
            {% endif %}
            <a href="#" class="btn btn-secondary ml-2" data-toggle="modal" data-target="#exampleModalCenter">
                <i class="fas fa-share-alt mr-2"></i>Partager
            </a>
            <a href="{{ path('ads_like', {'slug': ad.slug}) }}" class="js-like btn btn-secondary ml-2">
                {% if app.user and ad.isLikeByUser(app.user) %}
                    <i class="fas fa-heart mr-1" style="color: red"></i>
                {% else %}
                    <i class="far fa-heart mr-1" style="color: red"></i>
                {% endif %}
                <span class="js-likes">
                    {{ ad.likes|length }}
                </span><span>{% if ad.likes|length > 1 %} aiment{% else %} aime{% endif %} cette annonce</span>
            </a>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-4">
                {{ ad.content|raw }}

                {% include 'common/carousel.html.twig' %}

                <hr>

                {% if ad.comments|length > 0 %}
                    <h2 class="mb-3">Commentaires de nos voyageurs</h2>

                    <div class="alert alert-info">
                        <h4 class="alert-heading text-center">
                            <div class="row align-items-center">
                                <div class="col">
                                    Note globale donnée par nos voyageurs
                                </div>
                                <div class="col">
                                    {% include 'common/rating.html.twig' with{'rating' : ad.avgRatings} %}
                                    <br>
                                    <small>(calculée sur {{ ad.comments|length }} avis)</small>
                                </div>
                            </div>
                        </h4>
                    </div>
                    {% for comment in ad.comments %}
                        <div id="comments_for_ads" class="rounded mb-3">
                            <div id="comment_author" class="bg-gradient-warning px-3 py-2">
                                <img src="{{ comment.author.picture|imagine_filter('thumb') }}" alt="" class="avatar avatar-mini">
                                <strong>{{ comment.author.username }}</strong> a dit :
                            </div>
                            <div class="px-3 py-2">
                                <blockquote>
                                    {{ comment.content }}
                                </blockquote>
                                <strong>Note: </strong>
                                {% include 'common/rating.html.twig' with {'rating': comment.rating} %}
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <h2>Cette annonce n'a pas encore reçu de commentaires...</h2>
                {% endif %}
            </div>
            <div class="col pl-5">
                {% set a = ad.author %}
                <div class="row">
                    <div class="col-3">
                        <a href="{{ path('user_show', {'slug': a.slug}) }}">
                            <img src="{{ ad.author.picture }}" class="avatar avatar-medium"
                                 alt="Avatar de {{ a.fullName }}">
                        </a>
                    </div>
                    <div class="col">
                        <a href="{{ path('user_show', {'slug': a.slug}) }}">
                            <h3>{{ a.fullName }}</h3>
                        </a>
                        <span class="badge badge-primary">{{ a.ads|length }} annonces</span>
                    </div>
                </div>

                <div>
                    {{ a.description |raw }}
                </div>
                <div id="map" style="width: 100%; height: 400px" data-lat="{{ ad.lat }}" data-lng="{{ ad.lng }}"></div>

                <div class="table-active text-center p-2">L'adresse exacte vous sera communiqué après la réservation</div>
            </div>
        </div>
    </div>





    {# MODAL #}
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLongTitle">Partager vos envies avec vos proches</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <a class="socialNetwork" href=""><i class="fab fa-twitter" style="color: #00B6F1;"></i>Twitter</a>
                        </div>
                        <div class="col-12">
                            <a class="socialNetwork" href=""><i class="fab fa-facebook" style="color: #3B5998;"></i>Facebook</a>
                        </div>
                        <div class="col-12">
                            <a class="socialNetwork" href=""><i class="fab fa-whatsapp" style="color: #25d366;"></i>WhatsApp</a>
                        </div>
                        <div class="col-12">
                            <a class="socialNetwork" href=""><i class="fab fa-linkedin-in" style="color: #04669A;"></i>Linkedin</a>
                        </div>
                        <div class="col-12">
                            <a class="socialNetwork" href=""><i class="fab fa-instagram" style="color: #c13584"></i>Instagram</a>
                        </div>
                        <div class="col-12">
                            <a class="socialNetwork"><i class="fab fa-snapchat" style="color: #fffc00;"></i>SnapChat</a>
                        </div>
                        <div class="col-12">
                            <a class="socialNetwork"><i class="far fa-file-pdf" style="color: #ff0000;"></i>Télécharger en PDF</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>

{% endblock %}

{% block javascripts %}


    <script>
        let map = document.querySelector('#map')
        if (map !== null){

            let center = [map.dataset.lat, map.dataset.lng]
            let icon = L.icon({

                iconUrl: '/images/house.png',
                iconSize: [35, 35],
                popupAnchor: [0, -20]
            });
            map = L.map('map', {worldCopyJump: true}).setView(center, 12)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                minZoom: 4,

                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors for <a href="{{ path('home') }}">FlashBnb</a>'
            }).addTo(map);
            L.marker(center, {icon: icon}).addTo(map).bindPopup("<b>{{ad.price}} &euro; / nuits</b>", {closeButton: false}).openPopup();
            L.circle(center, {
                stroke:false,
                color: 'grey',
                fillColor: 'grey',
                fillOpacity: '0.4',
                radius: 100
            }).addTo(map)
        }
        /**$('.leaflet-popup-close-button').remove();
        $('.leaflet-popup-content').css('margin', "5px");
        $('.leaflet-popup-content-wrapper > div').maxWidth("20").height("30");**/
    </script>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

{% endblock %}


