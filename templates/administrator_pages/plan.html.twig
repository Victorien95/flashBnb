{% extends 'base.html.twig' %}

{% block title %}FlashBnB - Mentions légales {% endblock %}
{% block stylesheets %}
    <style>
        h3.myPlan{
            font-size: 2.03125rem;
        }
        li.myPlan{
            font-size: 1.125rem;
            list-style: none;
        }
        a{
            text-decoration: none;
            color: #444;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid" style="padding-left: 80px; padding-right: 80px; padding-top: 40px; padding-bottom: 24px;">
        <div class="wpb_wrapper">
            <div class="row">
                <div class="col-4">
                    <a href="{{ path('home') }}"><h3 class="myPlan">Acceuil</h3></a>
                    <ul>
                        <li class="myPlan"><a href="{{ path('account_register') }}">S'inscrire</a></li>
                        {% if app.user %}
                            <li class="myPlan"><a href="{{ path('account_logout') }}">Se déconnecter</a></li>

                        {% endif %}
                    </ul>
                    <a href="{{ path('ads_index') }}"><h3 class="myPlan">Annonces</h3></a>
                    {% if app.user %}
                        <ul>
                            <li class="myPlan"><a href="{{ path('ads_create') }}">Créer une annonce</a></li>
                            <li class="myPlan"><a href="{{ path('user_show', {'slug':app.user.slug, '_fragment':'liked' }) }}">Favoris</a></li>
                        </ul>
                        <a href="{{ path('account_index') }}"><h3 class="myPlan">Mon compte</h3></a>
                        <ul>
                            <li class="myPlan"><a href="{{ path('account_profil') }}">Modifier mon profil</a></li>
                            <li class="myPlan"><a href="{{ path('account_bookings') }}">Mes réservations</a></li>
                        </ul>
                    {% endif %}
                    <a href="{{ path('administrator_pages_plan') }}"><h3 class="myPlan">Administration FlashBnB</h3></a>
                    <ul>
                        <li class="myPlan"><a href="{{ path('administrator_pages_qsm') }}">Qui sommes nous ?</a></li>
                        <li class="myPlan"><a href="{{ path('administrator_pages_cgv') }}">Conditions générales des ventes</a></li>
                        <li class="myPlan"><a href="{{ path('administrator_pages_infoFlashbnb') }}">Informations - Flashbnb</a></li>
                        <li class="myPlan"><a href="{{ path('administrator_pages_mentionsLegales') }}">Mentions légales</a></li>
                        <li class="myPlan"><a href="{{ path('administrator_pages_contact') }}">Nous contacter</a></li>
                        <li class="myPlan"><a href="{{ path('administrator_pages_newsletter') }}">S'inscrire à la newsletter</a></li>
                        <li class="myPlan"><a href="{{ path('administrator_pages_plan') }}">Plan du site</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}