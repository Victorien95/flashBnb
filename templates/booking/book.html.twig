{% extends 'base.html.twig' %}
{% block title %}Réserver l'annonce : {{ ad.title }}{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/booking.css') }}">
    <link rel="stylesheet" href="{{ asset('css/date-picker.css') }}">

{% endblock %}


{% block body %}
    <div class="container">
        <h1 class="mb-2">Réserver pour l'annonce : {{ ad.title }}</h1>
        <p class="mb-5">Vous êtes sur le point de réserver le bien de <strong>{{ ad.author.fullName }}</strong>. Dites-nous tout on s'occupe du reste !</p>

        {{ form_start(form) }}
        <div class="myControl mb-4">
            <h2 class="mb-4">Commencez par nous dire quelles sont les dates qui vous intéressent !</h2>
            <div class="row">
                <div class="col">
                    {{ form_row(form.startDate) }}
                </div>
                <div class="col justify-content-between">
                    {{ form_row(form.endDate) }}
                </div>
            </div>
            <h4 class="mt-4">Montant du séjour : <span id="amount">...</span> &euro;</h4>
            <span id="days">0</span> <span id="nigths">nuit</span> à {{ ad.price }}&euro; / nuit

            <h4 class="mt-5">Vous avez un commentaire ?</h4>
            {{ form_row(form.comment) }}
        </div>
        <h2 class="mt-5 mb-3">Vous avez terminé !</h2>
        <p>Vacances de rêves ? Espace Coworking ? Peu importe, on est avec vous !</p>
        <button type="submit" class="btn btn-primary">Je réserve</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/date-picker.js') }}"></script>
    <script>
        $(document).ready(e => {
            $('#booking_startDate, #booking_endDate').datepicker({
            format: 'dd/mm/yyyy',
            datesDisabled: [
                {% for day in ad.notAvailableDays %}
                    "{{ day.format('d/m/Y') }}",
                {% endfor %}
            ],
            startDate: new Date()
            });
            $('#booking_startDate, #booking_endDate').change(reservationAmount)
        });
        
        function reservationAmount() {
            //Regex (\d+)\/(\d+)\/(\d{4})
            const endDate = new Date($('#booking_endDate').val().replace(/(\d+)\/(\d+)\/(\d{4})/, '$3-$2-$1'));
            const startDate = new Date($('#booking_startDate').val().replace(/(\d+)\/(\d+)\/(\d{4})/, '$3-$2-$1'));

            if (startDate && endDate && startDate < endDate){
                const DAY_TIME = 24 * 60 * 60 * 1000;
                const interval = endDate.getTime() - startDate.getTime();
                const days = interval / DAY_TIME;
                const amount = days * {{ ad.price }};

                $('#days').text(days);
                $('#amount').text(amount.toLocaleString('fr-FR'));
                if (days > 1){
                    $('#nigths').text('nuits')
                }else{
                    $('#nigths').text('nuit')
                }
            }else{
                $('#days').text('0');
                $('#amount').text('...');
                $('#nigths').text('nuit');
            }
        }
        
    </script>
{% endblock %}



