{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="my-5">Gestion des commentaires</h1>
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date de création</th>
                <th>Auteur</th>
                <th>Annonce</th>
                <th>Contenu</th>
                <th class="text-center">Note</th>
                <th class="text-center">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in pagination.data %}
                {% set author = comment.author %}
                <tr>
                    <td class="align-middle">{{ comment.id }}</td>
                    <td class="align-middle">{{ comment.createdAt|date('d/m/Y à H:i') }}</td>
                    <td class="align-middle">
                        <img class="avatar avatar-micro mr-2" src="{{ author.picture }}" alt="Avata de {{ author.fullname }}">{{ author.fullName }}
                    </td>
                    <td  class="align-middle">n°{{ comment.ad.id }} - {{ comment.ad.title }}</td>
                    <td id="admin_comment" class="align-middle">{{ comment.content }}</td>
                    <td class="align-middle text-center h5">
                        <span class="badge badge-info">{{ comment.rating }}</span>
                    </td>
                    <td class="text-center">
                        <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class="btn btn-primary my-1 mx-1"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_comment_delete', {'id': comment.id}) }}" class="btn btn-danger  my-1 mx-1"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ pagination.display }}
    </div>
{% endblock %}
